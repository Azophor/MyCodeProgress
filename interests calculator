# A simple interest calculator

principle = 0
rate = 0
time = 0

while True :
    principle = float(input("Enter the principle amount: "))
    if principle < 0:
        print("Principle amount cannot be less than zero")
    else:
        break
while True:
    rate = float(input("Enter the interest rate (percentage): "))
    if rate < 0:
        print("Interest rate cannot be less than zero")
    else:
        break

while True:
    time = float(input("Enter the time (years): "))
    if time < 0:
        print("Time cannot be less than zero")
    else:
        break

total = principle * pow((1 + rate /100), time)
print(f" Your balance after {time} years, with \n"
      f"a {rate}% interest rate, and an initial balance of\n"
      f"${principle} is ${total:.2f}.")
