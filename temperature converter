unit = input("Is the temperature in Celsius or Fahrenheit? ").lower()
temperature = float(input("What is the temperature? "))

if unit in ("c", "celsius"):
    temp = round((9 * temperature) / 5 + 32, 1)
    print(f"the temperature in fahrenheit is: {temp} degrees")
elif unit in ("f", "fahrenheit"):
    temp = round((temperature - 32) * 5/9, 1)
    print(f"the temperature in celsius is: {temp} degrees")
else:
    print(f"{unit} is an invalid unit")
